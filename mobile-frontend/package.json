    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "0.76.9",
    "react-native-dotenv": "^3.4.11",
    "react-native-gesture-handler": "~2.22.0",
    "react-native-paper": "^5.14.0",
