      "node_modules/(?!(react-native|@react-native|@react-navigation|react-native-paper|react-native-vector-icons)/)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}",
      "!src/**/__tests__/**"
